<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPOTIFY STREAMER"
            android:id="@+id/btnSpotify"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:onClick="stepClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCORES APP"
            android:id="@+id/btnScores"
            android:layout_below="@+id/btnSpotify"
            android:layout_alignParentStart="true"
            android:onClick="stepClick"
            android:layout_alignEnd="@+id/btnSpotify"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIBRARY APP"
            android:id="@+id/btnLibrary"
            android:layout_below="@+id/btnScores"
            android:layout_alignParentStart="true"
            android:onClick="stepClick"
            android:layout_alignEnd="@+id/btnScores"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/btnBuilder"
            android:layout_below="@+id/btnLibrary"
            android:layout_alignParentStart="true"
            android:onClick="stepClick"
            android:layout_alignEnd="@+id/btnLibrary"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XYZ READER"
            android:id="@+id/btnReader"
            android:layout_below="@+id/btnBuilder"
            android:layout_alignParentStart="true"
            android:onClick="stepClick"
            android:layout_alignEnd="@+id/btnBuilder"/>

        <Button
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CAPSTONE: MY OWN APP"
            android:id="@+id/btnCapstone"
            android:layout_below="@+id/btnReader"
            android:layout_alignParentStart="true"
            android:onClick="stepClick"
            android:layout_alignEnd="@+id/btnReader"/>
</RelativeLayout>
